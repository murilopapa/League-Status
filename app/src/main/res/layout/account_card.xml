<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/summonerIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/summonerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/summonerIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="me mama irmao" />


        <TextView
            android:id="@+id/soloduoQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/summonerName"
            app:layout_constraintTop_toBottomOf="@+id/summonerName"
            tools:text="SOLO DUO" />

        <TextView
            android:id="@+id/summonerElo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/soloduoQueue"
            app:layout_constraintTop_toBottomOf="@+id/summonerName"
            tools:text="Platina II" />


        <TextView
            android:id="@+id/summonerPDL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/summonerElo1"
            app:layout_constraintTop_toBottomOf="@+id/summonerName"
            tools:text="0 PDL" />

        <TextView
            android:id="@+id/flexQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/summonerName"
            app:layout_constraintTop_toBottomOf="@+id/summonerElo1"
            tools:text="FLEX QUEUE" />

        <TextView
            android:id="@+id/summonerElo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/flexQueue"
            app:layout_constraintTop_toBottomOf="@+id/summonerElo1"
            tools:text="Gold" />

        <TextView
            android:id="@+id/summonerPDL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/summonerElo2"
            app:layout_constraintTop_toBottomOf="@+id/summonerPDL1"
            tools:text="0 PDL" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>